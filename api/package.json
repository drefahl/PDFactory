{
  "name": "html-to-pdf",
  "version": "1.0.0",
  "description": "",
  "main": "srd/index.js",
  "scripts": {
    "dev": "run-s docker:up nodemon",
    "start": "cross-env NODE_ENV=production node dist/src/index.js",
    "build": "rimraf dist && tsc-alias",
    "lint": "tsc --noEmit",
    "format": "biome format --write src",

    "test:unit": "run-s test:unit:run",
    "test:unit:run": "vitest run tests/unit",
    "test:unit:watch": "run-s test:unit:run:watch",
    "test:unit:run:watch": "vitest --watch tests/unit",

    "test:integration": "run-s docker:test:up test:integration:run docker:test:down",
    "test:integration:run": "vitest run --config vitest.integration.config.ts tests/integration",
    "test:integration:watch": "run-s docker:test:up test:integration:run:watch",
    "test:integration:run:watch": "vitest --watch --config vitest.integration.config.ts tests/integration",

    "test:coverage": "vitest run --coverage",
    "test": "run-p test:unit test:integration",

    "docker:up": "docker compose -f docker/docker-compose.yml up -d --remove-orphans --wait",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:test:up": "docker compose -f docker/docker-compose.test.yml up -d --remove-orphans --wait",
    "docker:test:down": "docker compose -f docker/docker-compose.test.yml down",

    "generate-swagger": "ts-node -r tsconfig-paths/register --transpile-only scripts/generate-swagger.ts",
    "before-commit": "run-s lint format build test",
    "nodemon": "nodemon src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/jwt": "^9.0.4",
    "@fastify/multipart": "^9.0.3",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "@prisma/client": "6.4.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.40.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "ioredis": "^5.5.0",
    "jose": "^5.9.6",
    "pino-pretty": "^13.0.0",
    "puppeteer": "^24.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.13.1",
    "@types/supertest": "^6.0.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.4.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  }
}
